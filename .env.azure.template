# Azure Environment Variables Template
# Copy this to your Azure App Service Configuration -> Application Settings

# Django Configuration
DJANGO_SETTINGS_MODULE=FinanceTracker.azure_settings
SECRET_KEY=your-very-secure-secret-key-here
DEBUG=False
WEBSITE_HOSTNAME=your-app-name.azurewebsites.net

# Azure PostgreSQL Database Configuration
AZURE_POSTGRESQL_HOST=your-server-name.postgres.database.azure.com
AZURE_POSTGRESQL_NAME=financetracker
AZURE_POSTGRESQL_USER=your-username@your-server-name
AZURE_POSTGRESQL_PASSWORD=your-database-password

# Optional: Azure Storage Account for media files
# AZURE_STORAGE_ACCOUNT_NAME=your-storage-account
# AZURE_STORAGE_ACCOUNT_KEY=your-storage-key